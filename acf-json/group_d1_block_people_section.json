                        {
                            "key": "field_d1_social_platform",
                            "label": "Platform",
                            "name": "platform",
                            "type": "text",
                            "placeholder": "LinkedIn"
                        },
                        {
                            "key": "field_d1_social_link",
                            "label": "Link",
                            "name": "link",
                            "type": "link",
                            "return_format": "array"
                        }
                    ]
                }
            ]
        },
